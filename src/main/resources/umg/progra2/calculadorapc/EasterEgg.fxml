<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FFB6C1;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umg.progra2.calculadorapc.EasterEggController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="¡Has encontrado un Easter Egg!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #FF1493;"/>

                <ImageView fx:id="kirbyImage" fitHeight="300.0" fitWidth="400.0" preserveRatio="true">
                    <image>
                        <Image url="@kirbyintegral.png"/>
                    </image>
                </ImageView>

                <Label text="¡Poyo! La integral de Kirby es igual a..." style="-fx-font-size: 18px; -fx-text-fill: #FF69B4;"/>

                <Button fx:id="btnCerrar" text="Cerrar" onAction="#cerrarVentana"
                        style="-fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-color: #FF69B4; -fx-text-fill: white;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>